{
    "name": "linker-api",
    "version": "0.1.0",
    "private": true,
    "main": "server.js",
    "scripts": {
        "build": "npm-run-all clean:build tsc tsc:alias copy:secret copy:graphql",
        "clean": "rimraf node_modules & rimraf package-lock.json",
        "clean:build": "rimraf build/*",
        "copy:graphql": "ncp src/api/graphql/types build/api/graphql/types",
        "copy:secret": "ncp src/secret build/secret",
        "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --notify -r tsconfig-paths/register ./src/server.ts",
        "lint:check": "tsc & npm run lint:check:eslint & npm run lint:check:prettier",
        "lint:check:eslint": "npx eslint --ext .ts,.tsx,.js,.jsx .",
        "lint:check:prettier": "npx prettier --check './**/*.{ts,tsx,js,jsx,json,css,scss,less}'",
        "lint:fix": "npm run lint:fix:eslint & npm run lint:fix:prettier",
        "lint:fix:eslint": "npx eslint --fix --ext .ts,.tsx,.js,.jsx .",
        "lint:fix:prettier": "npx prettier --write './**/*.{ts,tsx,js,jsx,json,css,scss,less}'",
        "prepare": "husky install",
        "start": "nodemon ./build/server.js",
        "tsc": "NODE_OPTIONS='--max-old-space-size=8192' tsc",
        "tsc:alias": "tsc-alias -p tsconfig.json"
    },
    "dependencies": {
        "@apollo/server": "4.10.1",
        "@apollo/utils.keyvadapter": "3.1.0",
        "@graphql-tools/load-files": "7.0.0",
        "@graphql-tools/merge": "9.0.3",
        "@graphql-tools/schema": "10.0.3",
        "@graphql-tools/utils": "10.1.2",
        "@keyv/redis": "2.8.4",
        "bcryptjs": "^2.4.3",
        "body-parser": "1.20.2",
        "compression": "1.7.4",
        "connect-mongo": "5.1.0",
        "cors": "2.8.5",
        "cron": "3.1.6",
        "cyberskill": "3.1.0",
        "dotenv": "16.4.5",
        "express": "4.19.1",
        "express-device": "0.4.2",
        "express-session": "1.18.0",
        "graphql": "16.8.1",
        "graphql-scalars": "1.23.0",
        "graphql-subscriptions": "2.0.0",
        "graphql-tag": "2.12.6",
        "graphql-ws": "5.15.0",
        "jsonwebtoken": "^9.0.2",
        "keyv": "4.5.4",
        "mongoose": "8.2.3",
        "lodash": "^4.17.21",
        "ncp": "2.0.0",
        "node-notifier": "10.0.1",
        "nodemon": "3.1.0",
        "npm-run-all": "4.1.5",
        "rimraf": "5.0.5",
        "tsc-alias": "1.8.8",
        "ws": "8.16.0"
    },
    "devDependencies": {
        "@commitlint/cli": "19.2.1",
        "@commitlint/config-conventional": "19.1.0",
        "@swc/core": "1.4.8",
        "@types/compression": "1.7.5",
        "@types/express": "4.17.21",
        "@types/express-session": "1.18.0",
        "@types/node": "20.11.30",
        "@types/node-notifier": "8.0.5",
        "@types/ws": "8.5.10",
        "@typescript-eslint/eslint-plugin": "7.3.1",
        "@typescript-eslint/parser": "7.3.1",
        "cross-env": "7.0.3",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-simple-import-sort": "12.0.0",
        "husky": "9.0.11",
        "lint-staged": "15.2.2",
        "prettier": "3.2.5",
        "ts-node-dev": "2.0.0",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.4.3"
    }
}
